
        <section id="details-info">
            <h1>Details</h1>
            <div class="coin-image">
                <img src="/static/images/bitcoin.png">
            </div>

            <div class="coin-info">
                <div class="coin-text">
                    <h1 id="name">{{cripto.name}}</h1>
                    <h3 id="payment">Payment method:{{cripto.payment}}</h3>
                    <p id="price"><span>Price: ${{cripto.price}}</span></p>
                    <p id="description">{{cripto.description}}</p>
                </div>
                <div class="product-btn">
                    <!--Only for registered user and author of the publication -->
                    {{#if cripto.hasUser2}}
                    {{#if cripto.isOwner}}
                    <div class="author">
                        <a href="/edit/{{cripto._id}}" class="btn-edit">Edit</a>
                        <a href="/delete/{{cripto._id}}" class="btn-delete">Delete</a>
                    </div> 
                       {{else}}
                    
                      {{#if cripto.isJoined}}
                    <!-- Logged in user who has already buy this crypto-->
                    <p class="buy-message">You already bought these crypto coins.</p>
                    {{else}}
                    <!-- Logged in user who has not yet buy this crypto-->
                     <a href="/buy/{{cripto._id}}" class="btn-buy">Buy</a> 
                </div>
                {{/if}}
                {{/if}}
                {{/if}}
            </div>
        </section>
